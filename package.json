{
  "name": "streamdeck-studio",
  "displayName": "StreamDeck Studio",
  "description": "Control VS Code with your Elgato Stream Deck. Configure buttons, execute commands, run terminal scripts, and more with a modern visual interface.",
  "version": "5.0.4",
  "engines": {
    "vscode": "^1.38.0"
  },
  "bugs": {
    "url": "https://github.com/sblanchard/streamdeck-studio/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sblanchard/streamdeck-studio.git"
  },
  "homepage": "https://github.com/sblanchard/streamdeck-studio#readme",
  "publisher": "serialcoder",
  "author": {
    "name": "sblanchard"
  },
  "license": "MIT",
  "categories": [
    "Other",
    "Keymaps"
  ],
  "activationEvents": [
    "*"
  ],
  "keywords": [
    "streamdeck",
    "stream deck",
    "elgato",
    "macro",
    "shortcut",
    "productivity",
    "hardware",
    "controller"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "StreamDeck Studio",
        "command": "streamdeck.reconnectToServer",
        "title": "Reconnect Device"
      },
      {
        "category": "StreamDeck Studio",
        "command": "streamdeck.activateSession",
        "title": "Activate Session"
      },
      {
        "category": "StreamDeck Studio",
        "command": "streamdeck.openConfiguration",
        "title": "Open Configuration Panel"
      },
      {
        "category": "StreamDeck Studio",
        "command": "streamdeck.smartCommit",
        "title": "Smart Commit (AI-assisted)"
      }
    ],
    "configuration": [
      {
        "title": "StreamDeck Studio",
        "properties": {
          "streamdeck.brightness": {
            "type": "integer",
            "default": 80,
            "minimum": 0,
            "maximum": 100,
            "description": "Stream Deck display brightness (0-100)"
          },
          "streamdeck.useDefaultButtons": {
            "type": "boolean",
            "default": true,
            "description": "Use default button presets (Save, Search, Terminal, Git, etc). Your custom buttons will override defaults."
          },
          "streamdeck.buttons": {
            "type": "object",
            "default": {},
            "description": "Button configurations. Keys are button indices (0-based), values are button configs.",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "command": {
                  "type": "string",
                  "description": "VS Code command to execute when button is pressed"
                },
                "arguments": {
                  "type": "string",
                  "description": "JSON-encoded arguments to pass to the command"
                },
                "label": {
                  "type": "string",
                  "description": "Text label to display on the button"
                },
                "icon": {
                  "type": "string",
                  "description": "Path to icon image for the button"
                },
                "terminalCommand": {
                  "type": "string",
                  "description": "Command to execute in the active terminal"
                },
                "createTerminal": {
                  "type": "object",
                  "description": "Create a new terminal with these options",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Terminal name"
                    },
                    "shellPath": {
                      "type": "string",
                      "description": "Path to shell executable"
                    },
                    "shellArgs": {
                      "type": "string",
                      "description": "Shell arguments"
                    },
                    "workingDirectory": {
                      "type": "string",
                      "description": "Working directory for the terminal"
                    },
                    "preserveFocus": {
                      "type": "boolean",
                      "description": "Whether to preserve focus on current editor"
                    }
                  }
                },
                "snippet": {
                  "type": "string",
                  "description": "Name of snippet to insert"
                },
                "languageId": {
                  "type": "string",
                  "description": "Language ID to set for current document"
                },
                "openFolder": {
                  "type": "object",
                  "description": "Open a folder",
                  "properties": {
                    "path": {
                      "type": "string",
                      "description": "Path to folder to open"
                    },
                    "newWindow": {
                      "type": "boolean",
                      "description": "Open in new window"
                    }
                  }
                }
              }
            }
          }
        }
      }
    ]
  },
  "extensionKind": [
    "ui"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "@elgato-stream-deck/node": "^7.3.3",
    "@resvg/resvg-js": "^2.6.2",
    "@vscode/codicons": "^0.0.44",
    "strongly-typed-events": "^1.6.11"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.38.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.0.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "typescript": "^5.0.0",
    "vscode-test": "^1.3.0"
  }
}
